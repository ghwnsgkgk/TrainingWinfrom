<Page x:Class="BikeShop.Menue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d"
      Title="Menue" Height="440" Width="814.9">


    <Grid Margin="0,10,55.2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="208*"/>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="224"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="1" Grid.Column="1" Content="Product" Margin="5"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Live Support" Margin="5" Click="Button_Click_1"/>
        <Button Grid.Row="1" Grid.Column="3" Content="Email Support" Margin="5" Click="Button_Click"/>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="5" Text="BikeShop" FontSize="36" TextAlignment="Center" 
                   VerticalAlignment="Center" Height="48" Margin="5"/>
        

    </Grid>
</Page>
